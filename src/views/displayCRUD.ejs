<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <style>
    table {
      width: 100%;
    }
    table, th, td {
      border:1px solid black;
    }
  </style>
  <body>
    <table>
      <tr>
        <th>Email</th>
        <th>Name</th>
        <th>Address</th>
        <th></th>
      </tr>
      <% for(let i=0; i < data.length; i++) { %>
      <tr>
        <td>
            <%= data[i].email %>
        </td>
        <td>
            <%= data[i].firstName  %> <%= data[i].lastName  %>
        </td>
        <td>
            <%= data[i].address %>
        </td>
        <td>
          <a href="/edit-crud?id=<%= data[i].id %>" class="btn-edit">Edit</a>
          <a href="/delete-crud?id=<%= data[i].id %>" class="btn-delete" >Delete</a>
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
